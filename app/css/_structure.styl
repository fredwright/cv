
// ====================================================

// BASE

// ====================================================

alignleft()
  @media screen and (min-width: $break-small)
    section &
      margin-left: ($width-timeline-line*-1)

// ====================================================

* 
  margin: 0
  font-family: $font-text
  box-sizing: border-box

html 
  height: 100%
  font-size: 12px
  color: $color-font
  overflow-y: scroll

body
  margin: 2rem 2rem 6rem 2rem
  overflow: visible
  max-width: 84rem
  @media screen and (min-width: $break-large)
    margin: 2rem auto 6rem auto

header, section, footer
  position: relative
  padding: 0
  @media screen and (min-width: $break-small)
    padding-left: ($width-timeline/3)
    margin-left: ($width-timeline/3)
  @media screen and (min-width: $break-large)
    padding-left: ($width-timeline/2)
    margin-left: ($width-timeline/2)

.skills
  alignleft()
  padding-top: (1/3)rem
  color: $color-title

// ====================================================