// TEXT

// ====================================================

h1, h2, h3
  font-family: $font-header
h1
  margin: 0 0 0 10rem
  font-size: 3rem
  line-height: 20rem
  @media screen and (min-width: $break-small)
    margin: 0 0 0 6rem
h2 
  font-size: 1.6rem
  line-height: 3rem
  margin: 6rem 0 0 0
  @media screen and (min-width: $break-small)
    margin: 4rem 0 0 0
.home h2
  margin: 4rem 0 0 0
h3 
  alignleft()
  font-size: 1.2rem
  line-height: 2.8rem
  padding: 0.8rem 0 0 0

p
  alignleft()

a, a:visited
  text-decoration: none
  color: $color-font
  &:hover
    text-decoration: underline

.skills a, .skills a:visited
  color: $color-title

